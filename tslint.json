{
  "extends": "tslint:latest",
  "rules": {
    // 使用 { ...foo, bar: 1 } 代替 Object.assign({}, foo, { bar: 1 })
    "prefer-object-spread": false,
    //
    "no-var-requires": false,
    // 不允许引入子模块
    "no-submodule-imports": false,
    // import必须按顺序
    "ordered-imports": false,
    // 接口命名必须以I开头
    "interface-name": false,
    // 禁止导入package.json 中未声明的模块
    "no-implicit-dependencies": false,
    // 限制变量命名
    "variable-name": false,
    // 对象字面量必须按key排序
    "object-literal-sort-keys": false,
    // 对象、数组、结构赋值的最后一项不需要逗号
    "trailing-comma": false,
    // 指定类成员的排序规则
    "member-ordering": false,
    // 禁止使用 JSDoc
    "no-redundant-jsdoc": false,
    //
    "no-increment-decrement": false,
    // 文件结尾必须有空行
    "eofline": true,
    // 禁止给一个初始化时直接赋值为 number, string 或 boolean 的变量显式的指定类型
    "no-inferrable-types": true,
    // 禁止使用any
    "no-any": false,
    "no-console": false,
    // 禁止在类外面使用 this
    "no-invalid-this": true,
    // 类型定义的冒号前面必须没有空格，后面必须有一个空格
    "typedef-whitespace": true,
    // 换行符必须用LF
    "linebreak-style": [true, "LF"],
    // if return 后无需写 else
    "no-else-after-return": true,
    // 禁止出现空代码块，允许 catch 是空代码块
    "no-empty": [true, "allow-empty-catch"],
    // 禁止空接口
    "no-empty-interface": true,
    // 类名和接口名用驼峰模式
    "class-name": true,
    // 禁止 super 在一个构造函数中出现两次
    "no-duplicate-super": true,
    // 禁止对 array 使用 for in 循环
    "no-for-in-array": true,
    // 禁止行尾有空格
    "no-trailing-whitespace": true,
    // 禁止无用的表达式
    "no-unused-expression": true,
    // 定义过的变量必须使用
    "no-unused-variable": true,
    // 变量必须先定义后使用
    "no-use-before-declare": true,
    // 禁止使用 var
    "no-var-keyword": true,
    // 必须使用 === 或 !==
    "triple-equals": true,
    // 禁止将 this 赋值给其他变量，除非是解构赋值
    "no-this-assignment": [
      true,
      {
        "allowed-names": ["^self$", "^that$"],
        "allow-destructuring": true
      }
    ],
    // 使用 for 循环遍历数组时，如果 index 仅用于获取成员，则必须使用 for of 循环替代 for 循环
    "prefer-for-of": true,
    // 必须使用箭头函数，除非是单独的函数声明或是命名函数
    "only-arrow-functions": [
      true,
      "allow-declarations",
      "allow-named-functions"
    ],
    // 箭头函数的参数必须有小括号
    "arrow-parens": true,
    // 使用 return; 而不是 return undefined;
    "return-undefined": true,
    // 禁止对函数的参数重新赋值
    "no-parameter-reassignment": true,
    // for in 内部必须有 hasOwnProperty
    "forin": true,
    // 禁止在分支条件判断中有赋值操作
    "no-conditional-assignment": true,
    "no-duplicate-variable": [true, "check-parameters"],
    // 禁止使用 eval
    "no-eval": true,
    // 禁止没必要的 return await
    "no-return-await": true,
    // 禁止 throw 字符串，必须 throw 一个 Error 对象
    "no-string-throw": true,
    // 小数必须以 0. 开头，禁止以 . 开头，并且不能以 0 结尾
    "number-literal-format": true,
    // 变量申明必须每行一个，for 循环的初始条件中除外
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    // switch 的 case 必须 return 或 break
    "no-switch-case-fall-through": true,
    // 必须使用 isNaN(foo) 而不是 foo === NaN
    "use-isnan": true,
    // 使用4个空格作为缩进
    "indent": [true, "spaces", 4],
    "ter-indent": [
      true,
      4,
      {
        "SwitchCase": 1
      }
    ],
    // 禁止出现重复的 import
    "no-duplicate-imports": true,
    // 禁止使用特殊空白符（比如全角空格）
    "no-irregular-whitespace": true,
    // 禁止变量定义时赋值为 undefined
    "no-unnecessary-initializer": true,
    // 必须使用单引号，jsx 中必须使用双引号
    "quotemark": [true, "single"],
    // 行尾必须有分号
    "semicolon": [true, "always", "ignore-interfaces"],
    // 括号内首尾禁止有空格
    "space-within-parens": [true, 0],
    // 尽量使用const 而非 let
    "prefer-const": true,
    // 禁止函数的循环复杂度超过20
    "cyclomatic-complexity": true,
    // 单行字符不超过120个
    "max-line-length": [true, 120],
    // 必须使用 a = {b} 而不是 a = {b: b}
    "object-literal-shorthand": true,
    // if () 后面的 { 禁止换行
    "one-line": true,
    // 函数名前必须有空格
    "space-before-function-paren": true,
    // 禁止出现 foo['bar']，必须写成 foo.bar
    "no-string-literal": true
  }
}
